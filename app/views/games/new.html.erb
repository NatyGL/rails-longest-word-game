
<div class="container mt-5">
  <h1 class="mb-4">New game</h1>
  <% @letters.each do | letter| %>
    <span id ="letter" class = "border p-3 text-white shadow-sm mb-5 rounded"><%= letter%></span>
  <%end %>

<form action="score" method="post" data-turbo="false" class="row g-3 mt-3" >

  <div class="col-auto">
   <label for="inputWord">What is the longest word you can find?</label>
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <%= hidden_field_tag :letters, @letters%>
    <input type="text" class="form-control" name="word" value="<%= params[:word] %>">

  </div>
  <div class="col-aut">
  <button type="submit" class="btn btn-primary mb-3">Play</button>
  </div>
    <!-- ... -->
</form>

</div>
